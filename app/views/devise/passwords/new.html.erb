<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email,:class=>"form-control", :autofocus => true, :style =>"width:300px;" ,:required=> :true %><br /></div>

  <div><%= f.submit "Send me reset password instructions" ,:class=>"btn btn-primary"%></div>
<% end %>
<br />
<%= button_to "Sign in", new_session_path(resource_name),:class=>"btn btn-primary",:style =>"margin-left:3px;margin-top:-21px;" %>
<%= button_to "Sign up", new_user_registration_path,:class=>"btn btn-primary",:method => :get, :style =>"margin-left:80px;margin-top:-56px;"%>

<%#= render "devise/shared/links" %>
