    </tr></br>
      <th>City</th>
      <td><%= best_in_place current_user, :city ,:path=> "/users"%></td>
      <td><%= link_to(image_tag("edit1.png", :style=>"width: 15px;"),  edit_user_registration_path, :remote=>true ) %>
    </tr>  
  </table>
</div>

