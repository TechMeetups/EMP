<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>
  <fieldset>
    <legend>Sign up</legend>
    <%= devise_error_messages! %>

    <div class="form-group">
     	<label for="inputEmail" class="col-lg-2 control-label">Upload Photo</label>
      <div class="col-lg-10">
      	<%= f.file_field :avatar, :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
      	<%= f.text_field :name, :autofocus => true, :placeholder=>"Name" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
      	<%= f.email_field :email, :placeholder=>"Email" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
      	<%= f.password_field :password, :placeholder=>"Password" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password Confirmation</label>
      <div class="col-lg-10">
      	<%= f.password_field :password_confirmation, :placeholder=>"Password Confirmation" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Company</label>
      <div class="col-lg-10">
      	<%= f.text_field :company, :placeholder=>"Company" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">Type</label>
      <div class="col-lg-10">
        <label>
          <%= f.radio_button :user_type, "Startup" %> Startup
        </label>

        <label>
          <%= f.radio_button :user_type, "Mentor" %> Mentor
        </label>
      
        <label>
          <%= f.radio_button :user_type, "Investor" %> Investor
        </label>
      
        <label>
          <%= f.radio_button :user_type, "Developer" %> Developer
        </label>

      </div>
    </div>


    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">City</label>
      <div class="col-lg-10">
      	<%= f.text_field :city, :placeholder=>"City" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Address</label>
      <div class="col-lg-10">
      	<%= f.text_field :address, :placeholder=>"Address" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">About Youself</label>
      <div class="col-lg-10">
      	<%= f.text_area :description, :placeholder=>"Describe Yourself" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Offer</label>
      <div class="col-lg-10">
      	<%= text_field_tag :offer, nil, :class=>"tags form-control LV_valid_field",:style=>"height:107px;" %>


        <%#= text_field_tag :tag,@company.tag_list_on(:company_tags).join(", "),:id=>"tag",:class=>"tags form-control LV_valid_field",:style=>"height:107px;" %>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Looking For</label>
      <div class="col-lg-10">
        <%= text_field_tag :looking_for, nil, :placeholder=>"Looking For" , :class=>"form-control", :style=>"height:107px;" %>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Twitter URL</label>
      <div class="col-lg-10">
      	<%= f.text_field :twitter, :placeholder=>"Twitter URL" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Facebook URL</label>
      <div class="col-lg-10">
      	<%= f.text_field :facebook, :placeholder=>"Facebook URL" , :class=>"form-control"%>
      </div>
    </div>

    <div class="form-group">
    	<label for="inputEmail" class="col-lg-2 control-label">Linkedin URL</label>
      <div class="col-lg-10">
      	<%= f.text_field :linkedin, :placeholder=>"Linkedin URL" , :class=>"form-control"%>
      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
      	<%= f.submit "Sign Up", :class=>"btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>

<script>
  function onAddTag(tag) {  //tags
        alert("Added a tag: " + tag);
      }
      function onRemoveTag(tag) {
        alert("Removed a tag: " + tag);
      }

      function onChangeTag(input,tag) {
        alert("Changed a tag: " + tag);
      }

      $(function() {
      $('#offer').tagsInput({width:'auto'});
      $('#looking_for').tagsInput({width:'auto'});
      });   
   
</script>
