<h1>Listing events</h1>

<table id ="events" class="display">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>S date</th>
      <th>E date</th>
      <th>S time</th>
      <th>E time</th>
      <th>Description</th>
      <th>Twitter hash tag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user_id %></td>
        <td><%= event.title %></td>
        <td><%= event.s_date %></td>
        <td><%= event.e_date %></td>
        <td><%= event.s_time %></td>
        <td><%= event.e_time %></td>
        <td><%= event.description %></td>
        <td><%= event.twitter_hash_tag %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to(image_tag("edit.png", :style=>"width: 15px;"), events_edit_path(event)) %></td>
        <td><%= link_to(image_tag("trash.png", :style=>"width: 15px;"), events_delete_path(event)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="float:right">
<%= button_to 'New Event', new_event_path,:method=>"post", :class=>"btn btn-danger" %>
</div>