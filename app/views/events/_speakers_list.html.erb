<table class="table", border:0px>
  <tr>
    <% @speakers.each_with_index do |speaker, index| %>
      <% if index+1 == 5 %> </tr><tr> <% end %>
      <td style="text-align:center">
        <% @user = User.find(speaker.user_id) %>
        <%=  link_to(image_tag(@user.avatar.url(:thumb), :style=>"width: 100px;height: 80px;"),user_profile_path(id: @user.id) ) %> <br/>
        <b><%= link_to @user.name, user_profile_path(id: @user.id) %></b>
      </td>
    <% end %>
  </tr>
</table>