<div id="masonry-container" class="transitions-enabled clearfix masonry-brick">

	<% if !@events.blank? %>
		<% @events.each do |event| %>
			<div class="box col5">
			  <div>
			    <div class="thumbnail">
			      <h3><%= event.title %></h3>
			      <% if !event.event_banners.blank? %>
			      	<%= image_tag event.event_banners.first.file.url(:medium), :style=>"height: 200px;" %>
			      <%else%>
			      	<%= image_tag "Fantasy_wallpapers_174.jpg", :style=>"height: 200px;" %>
			      <% end %>
			      <div class="caption">
			        
				     
					    <p><b> Date </b>
					   	<%= event.s_date %>           
					    <div style="margin-top: -30px; margin-left: 230px">
					    	<b> Time </b>
								<%= event.s_time.strftime("%I:%M%p") %><b>  to </b>
								<%= event.e_time.strftime("%I:%M%p") %></p>
				   		</div>
				   		<p><b> City </b>
					   	<%= City.find(User.find(event.user_id).city_id).name %>       
				   		 <p><%= event.description %></p>
			        <p>
			            <%= link_to 'Learn More',event,  :class=>"btn btn-info" ,:style=>"margin-left: 350px;"%>
					</p>
			      </div>
			    </div>
			  </div>
			</div>
		<% end %>
	<% end %>
</div>

<div style="display:block;" >
	<%= link_to 'Submit Event',nil,  :class=>"btn btn-danger" %>
</div>