<div>
	<div>
	<% if !@events.blank? %>
		<% @events.each do |event| %>
		  <div class="col-sm-6 col-md-6">
		    <div class="thumbnail">
		      <h3><%= event.title %></h3>
		      <img data-src="holder.js/300x200" alt="...">
		      <div class="caption">
		        
		        <p><%= event.description %></p>
				<p><b><%= Date %></b>
			   	<%= event.s_date %>           
			    <div style="margin-top: -30px; margin-left: 230px"><b><%= Time %></b>
					<%= event.s_time.strftime("%I:%M%p") %><b>  to </b>
					<%= event.e_time.strftime("%I:%M%p") %></p>
			   	</div>
			   
		        <p><a href="#" class="btn btn-info" role="button" style="margin-left: 350px;">Learn More</a> </p>
		      </div>
		    </div>
		  </div>
		<% end %>
	<% end %>
	</div>
	<div style="display:block;" >
		<%= button_to 'New Event', new_event_path,:method=>"post", :class=>"btn btn-danger" %>
	</div>
</div>