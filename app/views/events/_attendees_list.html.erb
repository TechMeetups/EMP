<table class="table">
  <tr>
    <% @attendee.each_with_index do |attendee, index| %>
      <% if index+1 == 9 %> </tr><tr> <% end %>
      <td style="text-align:center">
        <% if !User.where(:id => attendee.user_id ).blank?  %>  
        <% @user = User.where(:id => attendee.user_id ).first %>
          <%=  link_to(image_tag(@user.avatar.url(:thumb), :style=>"width: 100px;height: 80px;"),user_profile_path(id: @user.id) ) %> <br/>
          <b><%= link_to @user.name, user_profile_path(id: @user.id) %></b><br />
          <% if user_signed_in? && @event.user_id == current_user.id %>
            <b><%=  link_to(image_tag("trash.png", :style=>"width: 20px;"),home_destroy_event_user_path(attendee), :class=>"confirm", :id=>"confirm_#{attendee.user_id}") %></b>
            <% end %>
        <%end%>
      </td>
    <% end %>
  </tr>
</table>  